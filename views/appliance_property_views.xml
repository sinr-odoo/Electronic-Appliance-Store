<?xml version="1.0" ?>
<odoo>
    <record id="products_properties_action" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">electronic.appliance.properties</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="products_list_view" model="ir.ui.view">
        <field name="name">Products</field>
        <field name="model">electronic.appliance.properties</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="brand"/>
                <field name="condition"/>
                <field name="sale_price"/>
                <field name="available"/>
                <field name="warranty_info"/>
            </tree>
        </field>
    </record>

    <record id="products_form_view" model="ir.ui.view">
        <field name="name">Products</field>
        <field name="model">electronic.appliance.properties</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="name"></field>
                    </h1>
                    <group>
                        <group>
                            <field name="brand" />
                            <field name="model_number"/>
                            <field name="available"/>
                            <field name="date_of_availability"/>
                        </group>
                        <group>
                            <field name="condition"/>
                            <field name="cost_price"/>
                            <field name="sale_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Product Details">
                            <group>
                                <field name="description"/>
                                <field name="height"/>
                                <field name="width"/>
                                <field name="length"/>
                                <field name="weight"/>
                                <field name="accesories"/>
                                <field name="warranty_info"/>
                            </group>
                        </page>
                        <page string="Vendors">

                        </page>
                        <page string="Customers">
                            <field name="customer_id"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>