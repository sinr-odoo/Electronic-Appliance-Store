<?xml version="1.0" ?>
<odoo>
    <record id="products_properties_action" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">kanban,form,tree</field>
        <field name="domain">[('rent','=',False)]</field>
        <field name="context">{'search_default_available':True}</field>
    </record>

    <record id="product_template_form_view_inherit" model="ir.ui.view"> 
        <field name="name">product.template.form.view.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet[@name='product_form']/div[hasclass('oe_title')]" position='inside'>
                <h3>
                    <group>
                        <field name="brand"/>
                    </group>
                </h3>
            </xpath>
            <xpath expr="//sheet[@name='product_form']/div[@name='options']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//header" position='replace'>
                <header>
                    <button string="Sales Order" name="electronic_appliances_store.create_sale_order_action" type="action" class="btn-primary"/>
                    <button string="Purchase Order" name="electronic_appliances_store.create_purchase_order_action" type="action" class="btn-primary" />
                </header>
            </xpath>

            <xpath expr="//notebook" position="replace">
                <notebook>
                    <page string="Product Details">
                        <group>
                            <group name="details">
                                <field name="model_number"/>
                                <field name="available"/>
                                <field name="date_of_availability" invisible="available"/>
                                <field name="active" invisible="1"/>
                                <field name="detailed_type" invisible="1"/>
                                <field name="variant_seller_ids" invisible="1"/>
                                <field name="uom_id" invisible="1"></field>
                                <field name="height"/>
                                <field name="width"/>
                                <field name="length"/>
                                <field name="weight"/>
                            </group>
                            <group name="extra_details">
                                <field name="condition"/>
                                <field name="list_price" string="Sale Price"/>
                                <field name="standard_price" string="Cost Price"/>
                                <field name="accesories"/>
                                <field name="warranty_info"/>
                            </group>
                        </group>
                    </page>
                    <page string="Vendors">
                        <field name="seller_ids"/>
                    </page>
                    <page string="Customers">
                        <field name="customer_ids"/>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>
    
    <record id="product_view_search_view" model="ir.ui.view">
        <field name="name">product.view.search.view</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_search_form_view"/>
        <field name="arch" type="xml">
            <search>
                <field name="brand" string="Brand"/>
                <group>
                    <filter string="brand" name="Brand" context="{'group_by':'brand'}"/>
                    <filter string="available" name="available" domain="[('available','=','true')]"/>
                </group>
            </search>
        </field>
    </record>
</odoo>